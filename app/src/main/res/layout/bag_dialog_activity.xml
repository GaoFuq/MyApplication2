<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/team_info_bg">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8B6969"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/tv_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背包"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />

        <!-- 关闭 按钮-->
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:background="#8B864E"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_divi"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_below="@+id/top"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/v_divi"
        >
        <!-- 左边的详细信息-->
        <ScrollView
            android:id="@+id/rl_left_detail_info"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="#666">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp">
            <TextView
                android:id="@+id/tv_material_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="物品详情"
                android:background="#854965"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_left_material_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:src="@drawable/baoshi1"
                android:layout_below="@+id/tv_material_detail_title"
                />
            <TextView
                android:id="@+id/iv_left_material_name"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:text="紫宝石"
                android:textSize="16sp"
                android:layout_below="@+id/iv_left_material_img"
                />
            <TextView
                android:id="@+id/iv_left_material_description"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:text="物品描述"
                android:background="#852741"
                android:textSize="16sp"
                android:layout_below="@+id/iv_left_material_name"
                />
            <TextView
                android:id="@+id/tv_material_sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出售：500银两"
                android:background="#852741"
                android:textSize="12sp"
                android:layout_below="@+id/iv_left_material_description"
                />
            <TextView
                android:id="@+id/tv_material_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买：1000银两"
                android:background="#852741"
                android:textSize="12sp"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_material_sell_price"
                android:layout_below="@+id/iv_left_material_description"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_material_sell_price"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                >
                <TextView
                    android:id="@+id/iv_left_material_equip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="装备"
                    android:padding="3dp"
                    />
                <TextView
                    android:id="@+id/iv_left_material_unload"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="卸下"
                    android:padding="3dp"
                    />
                <TextView
                    android:id="@+id/iv_left_material_sell"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="出售"
                    android:padding="3dp"
                    />
                <TextView
                    android:id="@+id/iv_left_material_buy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="购买"
                    android:padding="3dp"
                    />
            </LinearLayout>

        </RelativeLayout>
        </ScrollView>

        <!-- 右边的网格头像列表-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rl_left_detail_info"
            android:background="#CD853F"
            android:padding="5dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_bag_grid_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的物品"
                android:padding="5dp"
                android:gravity="center"
                />
            <View
                android:id="@+id/v_divi2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_below="@+id/tv_bag_grid_title"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_bag_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/v_divi2"
                android:padding="5dp">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
